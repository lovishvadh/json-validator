{
  "name": "json-comparison-workflow",
  "version": "1.0.0",
  "description": "GitHub Action for comparing JSON files between branches and sending Slack notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "test": "node test-comparison.js",
