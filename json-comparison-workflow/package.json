  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@actions/exec": "^1.1.1",
    "@slack/web-api": "^6.10.0",
    "deep-diff": "^1.0.2"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
