{
  "name": "json-validator-action",
  "version": "1.0.0",
  "description": "GitHub Action for validating JSON files in pull requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist && cp validator.js dist/",
    "test": "node test-validator.js",
    "test:unit": "jest",
    "lint": "eslint src/**/*.js",
    "package": "npm run build && npm run test"
  },
  "keywords": [
    "github-action",
    "json",
    "validation",
    "pull-request",
    "ci-cd"
  ],
  "author": "JSON Validator Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
